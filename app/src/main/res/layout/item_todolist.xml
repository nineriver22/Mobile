<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/ll_todolist"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/division"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_marginLeft="20dp"
            android:src="@drawable/iv_todolist_flag"/>

        <TextView
            android:id="@+id/tv_todolist_sn"
            android:layout_width="wrap_content"
            android:layout_height="22dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:gravity="center"
            android:text="M20454879548461222aaa"
            android:textColor="@color/primary_text"
            android:textSize="14dp"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical|right">

            <ImageView
                android:id="@+id/iv_todolist_state"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_marginRight="3dp"
                android:background="@drawable/iv_todolist_time"/>

            <TextView
                android:id="@+id/tv_todolist_explain"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:gravity="center"
                android:text="3小时38分"
                android:textColor="@color/primary_text"
                android:textSize="14dp"/>
        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/line"/>

    <TextView
        android:id="@+id/tv_todolist_title"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:paddingLeft="20dp"
        android:paddingTop="5dp"
        android:text="办公桌损坏"
        android:textSize="16dp"
        android:textStyle="bold"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:minHeight="40dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tv_todolist_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:gravity="left"
                android:minHeight="22dp"
                android:padding="5dp"
                android:text="故障内容故障内容故障内容故内容故障内容故内容故障内容故内容故障内容故障内容故障内容故障内容故障内容"
                android:textColor="@color/primary_text"
                android:textSize="14dp"/>
        </LinearLayout>


        <TextView
            android:id="@+id/tv_todolist_dispatchtime"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:text="2016-04-22 14:25:36"
            android:textColor="@color/primary_text"
            android:textSize="14dp"/>

    </LinearLayout>
</LinearLayout>
