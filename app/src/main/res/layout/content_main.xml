<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/primary_background"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="175dp"
        android:background="@drawable/bg_main_top"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_contentmain_menu"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_marginLeft="30dp"
                android:padding="8dp"
                android:src="@drawable/iv_main_menu"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="设备维修平台"
                android:textColor="@color/white"
                android:textSize="18dp"
                android:textStyle="bold"/>

            <ImageView
                android:id="@+id/iv_contentmain_message"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_marginRight="30dp"
                android:padding="8dp"
                android:src="@drawable/iv_main_message"/>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:gravity="center_horizontal">

            <EditText
                android:id="@+id/et_contentmain_search"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/bg_main_search"
                android:gravity="center"
                android:hint="请输入工单号查询维修信息"
                android:textColorHint="@color/primary_text"
                android:textSize="16dp"/>

            <ImageView
                android:layout_width="4dp"
                android:layout_height="36dp"
                android:layout_alignRight="@+id/et_contentmain_search"
                android:layout_centerVertical="true"
                android:layout_marginRight="55dp"
                android:src="@drawable/iv_dashed_gray"/>

            <ImageView
                android:id="@+id/iv_contentmain_scan"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_alignRight="@+id/et_contentmain_search"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:padding="6dp"
                android:src="@drawable/iv_main_scan"/>
        </RelativeLayout>

        <include layout="@layout/layout_contentmain_function"/>

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fadingEdge="none"
        android:overScrollMode="never">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/ll_contentmain_reportor"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="72dp"
                        android:layout_height="72dp"
                        android:src="@drawable/iv_main_visit"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:layout_marginTop="5dp"
                        android:gravity="center"
                        android:text="维修上门"
                        android:textColor="@color/primary_text"
                        android:textSize="12dp"
                        android:textStyle="bold"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="72dp"
                        android:layout_height="72dp"
                        android:src="@drawable/iv_main_repairscan"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:layout_marginTop="5dp"
                        android:gravity="center"
                        android:text="扫码维修"
                        android:textColor="@color/primary_text"
                        android:textSize="12dp"
                        android:textStyle="bold"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="72dp"
                        android:layout_height="72dp"
                        android:src="@drawable/iv_main_applytask"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:layout_marginTop="5dp"
                        android:gravity="center"
                        android:text="任务申请"
                        android:textColor="@color/primary_text"
                        android:textSize="12dp"
                        android:textStyle="bold"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_contentmain_operator"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:orientation="horizontal"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="72dp"
                        android:layout_height="72dp"
                        android:src="@drawable/iv_main_todo"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:layout_marginTop="5dp"
                        android:gravity="center"
                        android:text="我的代办"
                        android:textColor="@color/primary_text"
                        android:textSize="12dp"
                        android:textStyle="bold"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="72dp"
                        android:layout_height="72dp"
                        android:src="@drawable/iv_main_repairscan"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:layout_marginTop="5dp"
                        android:gravity="center"
                        android:text="配件领取"
                        android:textColor="@color/primary_text"
                        android:textSize="12dp"
                        android:textStyle="bold"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="72dp"
                        android:layout_height="72dp"
                        android:src="@drawable/iv_main_todotask"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:layout_marginTop="5dp"
                        android:gravity="center"
                        android:text="代办任务"
                        android:textColor="@color/primary_text"
                        android:textSize="12dp"
                        android:textStyle="bold"/>
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/line"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:layout_marginTop="30dp"
                        android:gravity="center"
                        android:text="常用工单"
                        android:textColor="@color/primary_text_dark"
                        android:textSize="14dp"
                        android:textStyle="bold"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:layout_marginTop="10dp"
                        android:gravity="center"
                        android:text="模板下单"
                        android:textColor="@color/primary_text"
                        android:textSize="12dp"
                        android:textStyle="bold"/>
                </LinearLayout>

                <ImageView
                    android:layout_width="84dp"
                    android:layout_height="match_parent"
                    android:paddingBottom="12dp"
                    android:paddingTop="12dp"
                    android:src="@drawable/iv_main_list"/>

                <TextView
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/line"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_marginTop="20dp"
                        android:gravity="center"
                        android:text="配件申请"
                        android:textColor="@color/primary_text_dark"
                        android:textSize="14dp"
                        android:textStyle="bold"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:layout_marginTop="10dp"
                        android:gravity="center"
                        android:text="配件申请"
                        android:textColor="@color/primary_text"
                        android:textSize="12dp"
                        android:textStyle="bold"/>
                </LinearLayout>

                <ImageView
                    android:layout_width="84dp"
                    android:layout_height="match_parent"
                    android:paddingBottom="12dp"
                    android:paddingTop="12dp"
                    android:src="@drawable/iv_main_fittingapply"/>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/line"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:layout_marginTop="30dp"
                        android:gravity="center"
                        android:text="备机确认"
                        android:textColor="@color/primary_text_dark"
                        android:textSize="14dp"
                        android:textStyle="bold"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:layout_marginTop="10dp"
                        android:gravity="center"
                        android:text="备机确认"
                        android:textColor="@color/primary_text"
                        android:textSize="12dp"
                        android:textStyle="bold"/>
                </LinearLayout>

                <ImageView
                    android:layout_width="84dp"
                    android:layout_height="match_parent"
                    android:paddingBottom="12dp"
                    android:paddingTop="12dp"
                    android:src="@drawable/iv_main_fittingconfirm"/>

                <TextView
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/line"/>

                <LinearLayout
                    android:id="@+id/ll_contentmain_service"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_marginTop="20dp"
                        android:gravity="center"
                        android:text="自助服务"
                        android:textColor="@color/primary_text_dark"
                        android:textSize="14dp"
                        android:textStyle="bold"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:layout_marginTop="10dp"
                        android:gravity="center"
                        android:text="自助服务"
                        android:textColor="@color/primary_text"
                        android:textSize="12dp"
                        android:textStyle="bold"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_contentmain_evaluate"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_marginTop="20dp"
                        android:gravity="center"
                        android:text="工单评价"
                        android:textColor="@color/primary_text_dark"
                        android:textSize="14dp"
                        android:textStyle="bold"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:layout_marginTop="10dp"
                        android:gravity="center"
                        android:text="工单评价"
                        android:textColor="@color/primary_text"
                        android:textSize="12dp"
                        android:textStyle="bold"/>
                </LinearLayout>

                <ImageView
                    android:layout_width="84dp"
                    android:layout_height="match_parent"
                    android:paddingBottom="12dp"
                    android:paddingTop="12dp"
                    android:src="@drawable/iv_main_service"/>
            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:scaleType="fitXY"
                android:src="@drawable/iv"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
