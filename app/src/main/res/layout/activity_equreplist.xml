<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/bottom_light"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_equreplist_back"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:padding="15dp"/>

        <TextView
            android:id="@+id/tv_equreplist_title"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:gravity="center"
            android:text="状态"
            android:textColor="@color/white"
            android:textSize="16dp"
            android:textStyle="bold"/>

        <ImageView
            android:id="@+id/iv_equreplist_scan"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:padding="15dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/white"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_equreplist_todolist"
                android:layout_width="match_parent"
                android:layout_height="59dp"
                android:gravity="center"
                android:text="待办"
                android:textColor="@color/bottom_light"
                android:textSize="16dp"
                android:textStyle="bold"/>

            <View
                android:id="@+id/view_equreplist_todolist"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/bottom_light"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_equreplist_donelist"
                android:layout_width="match_parent"
                android:layout_height="59dp"
                android:gravity="center"
                android:text="已办"
                android:textColor="@color/primary_text"
                android:textSize="16dp"
                android:textStyle="bold"/>

            <View
                android:id="@+id/view_equreplist_donelist"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>
        </LinearLayout>
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rcv_equreplist"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>
